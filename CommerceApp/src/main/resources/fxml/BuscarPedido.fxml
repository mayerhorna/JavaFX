<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="frmBusquedaPedidos" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.commerceapp.controller.BuscarPedidoController">
   <children>
      <Label fx:id="lblPedidos" text="LISTA DE PEDIDOS">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <padding>
            <Insets left="20.0" top="10.0" />
         </padding>
      </Label>
      <HBox>
         <children>
            <TableView fx:id="tblClientes">
              <columns>
                <TableColumn fx:id="colID" prefWidth="209.0" text="ID" />
                <TableColumn fx:id="colCliente" prefWidth="297.0" text="CLIENTE" />
                  <TableColumn fx:id="colFecha" prefWidth="191.0" text="FECHA" />
              </columns>
               <HBox.margin>
                  <Insets left="20.0" right="20.0" />
               </HBox.margin>
            </TableView>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
