<VBox style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.commerceapp.controller.PedidoVentaController">
   <children>
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: lightgrey;">
         <children>
            <MenuBar prefHeight="30.0" prefWidth="750.0">
              <menus>
                <Menu fx:id="mnuAdministrar" mnemonicParsing="false" text="Adm">
                  <items>
                    <MenuItem fx:id="mnuItemClose" mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu fx:id="mnuAyuda" mnemonicParsing="false" text="Ayu">
                  <items>
                    <MenuItem fx:id="mnuItemDelete" mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <Label fx:id="lblPuntoVenta" alignment="CENTER" prefHeight="20.0" prefWidth="350.0" text="Punto Venta demo" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <TableView fx:id="tblVenta" prefHeight="393.0" prefWidth="1080.0">
        <columns>
          <TableColumn fx:id="colNumero" prefWidth="75.0" text="N" />
          <TableColumn fx:id="colCodigo" prefWidth="75.0" text="Cod" />
            <TableColumn fx:id="colProducto" prefWidth="509.0" text="Produc" />
            <TableColumn fx:id="colCantidad" prefWidth="144.0" text="Cantid" />
            <TableColumn fx:id="colPrecio" prefWidth="132.0" text="Prec" />
            <TableColumn fx:id="colTotal" prefWidth="144.0" text="Total" />
        </columns>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </VBox.margin>
      </TableView>
      <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="580.0" minWidth="10.0" prefWidth="145.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="636.0" minWidth="10.0" prefWidth="636.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="109.0" minWidth="5.0" prefWidth="109.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="10.0" prefWidth="82.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="10.0" prefWidth="65.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="btnPedidoVenta" mnemonicParsing="false" text="P Venta" />
            <Button fx:id="btnCliente" mnemonicParsing="false" text="Clien" GridPane.rowIndex="1" />
            <Button fx:id="btnProducto" mnemonicParsing="false" text="Product" GridPane.rowIndex="2" />
            <Button fx:id="btnUsuario" mnemonicParsing="false" text="User" GridPane.rowIndex="4" />
            <Button fx:id="btnCaja" mnemonicParsing="false" text="Abrir Cajon" GridPane.rowIndex="5" />
            <Button fx:id="btnImprimir" mnemonicParsing="false" text="Imprimir" GridPane.rowIndex="6" />
            <TextField fx:id="txtPedidoVenta" GridPane.columnIndex="1" />
            <TextField fx:id="txtCliente" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="txtProducto" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="TxtObservaciones" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.rowIndex="8">
               <children>
                  <Label fx:id="lblSincronizado" text="Label" />
                  <Label fx:id="lblSino" text="Label" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" text="Confirma ped" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            <Label text="Obs:" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Button fx:id="btnClienteConfig" mnemonicParsing="false" text="Button" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <TextField GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="8">
               <children>
                  <Label fx:id="lblTotal" text="Label" />
                  <TextField fx:id="txtTotal" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </VBox.margin>
      </GridPane>
   </children>
</VBox>
